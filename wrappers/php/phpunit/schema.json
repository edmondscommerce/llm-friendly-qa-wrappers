{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "PHPUnit JSON Output",
    "description": "Custom JSON output converted from PHPUnit JUnit XML logs. PHPUnit has no native JSON mode.",
    "type": "object",
    "required": ["tool", "summary", "test_suites"],
    "properties": {
        "tool": { "type": "string", "const": "phpunit" },
        "summary": {
            "type": "object",
            "required": ["tests", "assertions", "errors", "failures", "skipped", "time"],
            "properties": {
                "tests": { "type": "integer", "minimum": 0 },
                "assertions": { "type": "integer", "minimum": 0 },
                "errors": { "type": "integer", "minimum": 0 },
                "failures": { "type": "integer", "minimum": 0 },
                "skipped": { "type": "integer", "minimum": 0 },
                "time": { "type": "number", "minimum": 0 }
            }
        },
        "test_suites": {
            "type": "array",
            "items": {
                "type": "object",
                "required": ["name", "tests", "assertions", "errors", "failures", "skipped", "time", "test_cases"],
                "properties": {
                    "name": { "type": "string" },
                    "file": { "type": "string" },
                    "tests": { "type": "integer", "minimum": 0 },
                    "assertions": { "type": "integer", "minimum": 0 },
                    "errors": { "type": "integer", "minimum": 0 },
                    "failures": { "type": "integer", "minimum": 0 },
                    "skipped": { "type": "integer", "minimum": 0 },
                    "time": { "type": "number", "minimum": 0 },
                    "test_cases": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "required": ["name", "class", "file", "line", "assertions", "time", "status"],
                            "properties": {
                                "name": { "type": "string" },
                                "class": { "type": "string" },
                                "file": { "type": "string" },
                                "line": { "type": "integer" },
                                "assertions": { "type": "integer", "minimum": 0 },
                                "time": { "type": "number", "minimum": 0 },
                                "status": { "type": "string", "enum": ["passed", "failed", "error", "skipped"] },
                                "failure": {
                                    "type": "object",
                                    "required": ["type", "message"],
                                    "properties": {
                                        "type": { "type": "string" },
                                        "message": { "type": "string" }
                                    }
                                },
                                "error": {
                                    "type": "object",
                                    "required": ["type", "message"],
                                    "properties": {
                                        "type": { "type": "string" },
                                        "message": { "type": "string" }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
