{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "TypeScript Compiler (tsc) Output",
  "description": "Custom JSON output from tsc --noEmit. tsc has no native JSON mode, so this schema is wrapper-defined.",
  "type": "object",
  "required": ["tool", "summary", "diagnostics"],
  "properties": {
    "tool": { "type": "string", "const": "tsc" },
    "version": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "exit_code": { "type": "integer", "enum": [0, 1] },
    "command": { "type": "string" },
    "summary": {
      "type": "object",
      "required": ["total_errors", "total_warnings", "files_with_errors"],
      "properties": {
        "total_errors": { "type": "integer", "minimum": 0 },
        "total_warnings": { "type": "integer", "minimum": 0 },
        "files_with_errors": { "type": "integer", "minimum": 0 }
      }
    },
    "diagnostics": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file_path", "line", "column", "severity", "code", "message"],
        "properties": {
          "file_path": { "type": "string" },
          "line": { "type": "integer", "minimum": 1 },
          "column": { "type": "integer", "minimum": 1 },
          "severity": { "type": "string", "enum": ["error", "warning"] },
          "code": { "type": "string", "pattern": "^TS\\d+$" },
          "message": { "type": "string" }
        }
      }
    }
  }
}
