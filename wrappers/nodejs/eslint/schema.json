{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ESLint Native JSON Output",
  "description": "Native ESLint --format json output. Schema documents the tool's own format.",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["filePath", "messages", "errorCount", "warningCount"],
    "properties": {
      "filePath": { "type": "string" },
      "messages": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["severity", "message", "line", "column"],
          "properties": {
            "ruleId": { "type": ["string", "null"] },
            "severity": { "type": "integer", "enum": [1, 2] },
            "message": { "type": "string" },
            "messageId": { "type": "string" },
            "line": { "type": "integer" },
            "column": { "type": "integer" },
            "endLine": { "type": "integer" },
            "endColumn": { "type": "integer" },
            "nodeType": { "type": ["string", "null"] },
            "fix": { "type": "object" },
            "suggestions": { "type": "array" }
          }
        }
      },
      "suppressedMessages": { "type": "array" },
      "errorCount": { "type": "integer", "minimum": 0 },
      "fatalErrorCount": { "type": "integer", "minimum": 0 },
      "warningCount": { "type": "integer", "minimum": 0 },
      "fixableErrorCount": { "type": "integer", "minimum": 0 },
      "fixableWarningCount": { "type": "integer", "minimum": 0 },
      "source": { "type": "string" },
      "usedDeprecatedRules": { "type": "array" }
    }
  }
}
