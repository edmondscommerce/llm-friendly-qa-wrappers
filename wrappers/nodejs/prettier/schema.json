{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prettier Wrapper Output",
  "type": "object",
  "required": ["tool", "version", "timestamp", "exit_code", "command", "summary", "results"],
  "properties": {
    "tool": { "const": "prettier" },
    "version": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "exit_code": { "type": "integer", "enum": [0, 1] },
    "command": { "type": "string" },
    "summary": {
      "type": "object",
      "required": ["total_files", "files_with_errors", "error_count", "warning_count"],
      "properties": {
        "total_files": { "type": "integer", "minimum": 0 },
        "files_with_errors": { "type": "integer", "minimum": 0 },
        "error_count": { "type": "integer", "minimum": 0 },
        "warning_count": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "results": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file_path", "formatted"],
        "properties": {
          "file_path": { "type": "string" },
          "formatted": { "type": "boolean" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
