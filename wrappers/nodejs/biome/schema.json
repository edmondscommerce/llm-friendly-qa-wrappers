{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Biome Native JSON Output",
  "description": "Native Biome --reporter=json output. Schema documents the tool's own format.",
  "type": "object",
  "required": ["summary", "diagnostics", "command"],
  "properties": {
    "command": { "type": "string" },
    "summary": {
      "type": "object",
      "required": ["errors", "warnings"],
      "properties": {
        "changed": { "type": "integer", "minimum": 0 },
        "unchanged": { "type": "integer", "minimum": 0 },
        "matches": { "type": "integer", "minimum": 0 },
        "duration": {
          "type": "object",
          "properties": {
            "secs": { "type": "integer" },
            "nanos": { "type": "integer" }
          }
        },
        "errors": { "type": "integer", "minimum": 0 },
        "warnings": { "type": "integer", "minimum": 0 },
        "skipped": { "type": "integer", "minimum": 0 },
        "suggestedFixesSkipped": { "type": "integer", "minimum": 0 },
        "diagnosticsNotPrinted": { "type": "integer", "minimum": 0 }
      }
    },
    "diagnostics": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "category": { "type": "string" },
          "severity": { "type": "string", "enum": ["error", "warning", "information", "hint"] },
          "description": { "type": "string" },
          "message": { "type": "array" },
          "advices": { "type": "object" },
          "verboseAdvices": { "type": "object" },
          "location": {
            "type": "object",
            "properties": {
              "path": { "type": "object" },
              "span": { "type": "array" },
              "sourceCode": { "type": "string" }
            }
          },
          "tags": { "type": "array", "items": { "type": "string" } },
          "source": {}
        }
      }
    }
  }
}
