{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ShellCheck Wrapper Output",
  "description": "Envelope around native ShellCheck -f json output with metadata.",
  "type": "object",
  "required": ["tool", "version", "timestamp", "exit_code", "command", "summary", "issues"],
  "properties": {
    "tool": { "const": "shellcheck" },
    "version": { "type": "string" },
    "timestamp": { "type": "string", "format": "date-time" },
    "exit_code": { "type": "integer", "enum": [0, 1] },
    "command": { "type": "string" },
    "summary": {
      "type": "object",
      "required": ["total_files", "total_issues", "error_count", "warning_count", "info_count", "style_count"],
      "properties": {
        "total_files": { "type": "integer", "minimum": 0 },
        "total_issues": { "type": "integer", "minimum": 0 },
        "error_count": { "type": "integer", "minimum": 0 },
        "warning_count": { "type": "integer", "minimum": 0 },
        "info_count": { "type": "integer", "minimum": 0 },
        "style_count": { "type": "integer", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "issues": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["file", "line", "endLine", "column", "endColumn", "level", "code", "message"],
        "properties": {
          "file": { "type": "string" },
          "line": { "type": "integer" },
          "endLine": { "type": "integer" },
          "column": { "type": "integer" },
          "endColumn": { "type": "integer" },
          "level": { "type": "string", "enum": ["error", "warning", "info", "style"] },
          "code": { "type": "integer" },
          "message": { "type": "string" },
          "fix": {
            "type": ["object", "null"],
            "properties": {
              "replacements": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "line": { "type": "integer" },
                    "endLine": { "type": "integer" },
                    "column": { "type": "integer" },
                    "endColumn": { "type": "integer" },
                    "precedence": { "type": "integer" },
                    "insertionPoint": { "type": "string" },
                    "replacement": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
